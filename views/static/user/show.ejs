<% if (flash.has('error')) { %>
  <v-alert type="error" :value="true">
    <%= flash.get('error') %>
  </v-alert>
<% } else { %>
  <v-layout justify-center>
  <v-flex xs12 sm8>
    <v-card>
      <v-card-title class="cyan darken-1">
        <svg data-jdenticon-value="<%= user.id %>" width="50" height="50">
            Fallback text or image for browsers not supporting inline svg.
        </svg>
        <span class="headline white--text">  <%= user.username %></span>
        <v-spacer></v-spacer>
        <v-btn dark icon>
          <v-icon>chevron_left</v-icon>
        </v-btn>
        <% if (user && session.user && user.id === session.user.id) { %>
          <v-btn dark icon href="<%= route('user.edit') %>">
            <v-icon>edit</v-icon>
          </v-btn>
        <% } %>
        <v-btn dark icon>
          <v-icon>more_vert</v-icon>
        </v-btn>
      </v-card-title>
      <v-list two-line>
        <v-list-tile @click="">
          <v-list-tile-action>
            <v-icon>mail</v-icon>
          </v-list-tile-action>
          <v-list-tile-content>
            <v-list-tile-title><%= user.email %></v-list-tile-title>
          </v-list-tile-content>
          <v-list-tile-action>
            <v-icon>chat</v-icon>
          </v-list-tile-action>
        </v-list-tile>
        <v-divider inset></v-divider>
        <v-list-tile @click="">
          <v-list-tile-action>
            <v-icon color="orange">grade</v-icon>
          </v-list-tile-action>
          <v-list-tile-content>
            <v-list-tile-title><%= __(`user.rank.${user.rank}`) %></v-list-tile-title>
          </v-list-tile-content>
        </v-list-tile>
        <v-divider inset></v-divider>
        <v-list-tile @click="">
          <v-list-tile-action>
            <v-icon>access_time</v-icon>
          </v-list-tile-action>
          <v-list-tile-content>
            <v-list-tile-title><%= user.status %></v-list-tile-title>
          </v-list-tile-content>
        </v-list-tile>
        <v-divider inset></v-divider>
        <v-list-tile @click="">
          <v-list-tile-action>
            <v-icon>adb</v-icon>
          </v-list-tile-action>
          <v-list-tile-content>
            <v-list-tile-title><%= user.pokemons.length %></v-list-tile-title>
          </v-list-tile-content>
        </v-list-tile>
      </v-list>
      <!--<v-card-media src="https://picsum.photos/700?image=996" height="200px">-->
      </v-card-media>
    </v-card>
  </v-flex>
  </v-layout>
<% } %>
